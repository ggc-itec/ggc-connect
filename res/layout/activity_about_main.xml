<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ff86bca8"
    tools:context=".AboutMainActivity" >
    
    <Button
        android:id="@+id/button_History"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView_GGCLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="History"
        android:textColor="#ffffffff"
        android:background="@drawable/button6" />
    
    <Button
        android:id="@+id/button_Geography"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/button_History"
        android:layout_marginTop="15dp"
        android:background="@drawable/button6"
        android:textColor="#ffffffff"
        android:text="Geography" />

    <Button
        android:id="@+id/button_GGCSong"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/button_Geography"
        android:layout_marginTop="15dp"
        android:background="@drawable/button6"
        android:textColor="#ffffffff"
        android:text="GGC Song" />

    <Button
        android:id="@+id/button_FunFacts"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/button_GGCSong"
        android:layout_marginTop="15dp"
        android:background="@drawable/button6"
        android:textColor="#ffffffff"
        android:text="GGC Fun Facts" />

    <ImageView
        android:id="@+id/imageView_GGCLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ggc_logo4" />
    

</RelativeLayout>
