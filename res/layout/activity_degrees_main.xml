<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff009933"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DegreesMainActivity" >

    <TextView
        android:id="@+id/ggc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="Arial"
        android:text="Georgia Gwinnett College"
        android:textSize="23sp" />

    <ImageView
        android:id="@+id/ggc_logo"
        android:layout_width="300dp"
        android:layout_height="184dp"
        android:layout_below="@+id/start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_weight="0.53"
        android:src="@drawable/ggclogodm" />
    
    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ggc_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="#FF6E6E6E"
        android:gravity="center"
        android:padding="15dp"
        android:text="Find Your Major" />

</RelativeLayout>